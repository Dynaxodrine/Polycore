@using Microsoft.AspNet.Identity
@model IEnumerable<Polycore.Models.ApplicationUser>
@{
    ViewBag.Title = "Users index";
    if (!User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_Error.cshtml";
    }
}
<div class="span12">
    <div class="template-wrapper">
        <div class="block block-page_header_block span12 first ">
            <div class="span12 block-title centered">
                <h2>Manage Users</h2>
                <p>The info and stuff, right?</p>
            </div>
            <div class="span12 block-divider"></div>
        </div>
    </div>
    <div class="block block-column_block span12 first cf">
        <!-- Latest news -->
        <div class="block span12 first cf">
            <div class="title-wrapper">
                <h3 class="widget-title">
                    <i class="fa fa-user"></i>
                    Users
                </h3>
                <div class="clear"></div>
            </div>
            <div class="wcontainer">
                <table class="table table-striped table-condensed table-hover" id="select">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Gdr</th>
                        <th>P</th>
                        <th>C</th>
                        <th>NA</th>
                        <th></th>
                    </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr onclick="location.href = '@(Url.Action("User", new {id = item.Id}))'">
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@(item.Age ?? 0)</td>
                            <td>@item.Gender</td>
                            <td>@item.Posts.Count</td>
                            <td>@item.NewsArticles.Count</td>
                            <td>@item.Comments.Count</td>
                            <td>
                                @Html.ActionLink(" ", "User", "Admin", new {id = item.Id}, new {@class = "fa fa-fw fa-info"})
                                @Html.ActionLink(" ", "Roles", "Admin", new { id = item.Id }, new {@class = "fa fa-fw fa-users"})
                                @if (item.Id != User.Identity.GetUserId())
                                {
                                    @Ajax.ActionLink(" ", "DeleteUser", new {id = item.Id}, new AjaxOptions
                                    {
                                        Confirm = "Are you sure user: " + item.UserName + " must be deleted?",
                                        HttpMethod = "Post",
                                        OnSuccess = "window.location.reload()"
                                    }, new {@class = "fa fa-fw fa-trash-o"})
                                }
                            </td>
                        </tr>
                    }
                </table>
                <br/>
                @Html.ActionLink("Back", "Dashboard", "Admin", null, new Dictionary<string, object>() {{"class", "button-green button-small"}})
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/Scripts/jquery.js")
    @Scripts.Render("~/Scripts/SelectBar.js")
}
