@model Polycore.Models.UserRoleViewModel
@{
    ViewBag.Title = "User details";
    if (!User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_Error.cshtml";
    }
} 
<div class="span12">
    <div class="template-wrapper">
        <div class="block block-page_header_block span12 first ">
            <div class="span12 block-title centered">
                <h2>Roles</h2>
                <p>Here you can add and remove roles of users? <small><i>Cool!</i></small></p>
            </div>
            <div class="span12 block-divider"></div>
        </div>
    </div>
    <div class="block block-column_block span12 first cf">
        <!-- Latest news -->
        <div class="block span12 first cf">
            <div class="title-wrapper">
                <h3 class="widget-title">
                    <i class="fa fa-user"></i>
                    Roles of @Model.UserName
                </h3>
                <div class="clear"></div>
            </div>
            <div class="wcontainer">
                <table class="table table-striped table-condensed table-hover" id="select">
                    <thead>
                    <tr></tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.RoleList)
                    {
                        <tr>
                            <td>@item</td>
                            <td>
                                @Ajax.ActionLink(" ", "DeleteRoleFromUser", new {id = Model.UserId, rolename = item}, new AjaxOptions
                                {
                                    Confirm = "Are you sure role: " + item + " must be deleted from user: " + Model.UserName + "?",
                                    HttpMethod = "Post",
                                    OnSuccess = "window.location.reload()"
                                }, new {@class = "fa fa-fw fa-trash-o"})
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                <br/>
                @Html.ActionLink("Add role to user", "AddRoleToUser", new { id = Model.UserId }, new {@class="button-green button-small"})
                @Html.ActionLink("Back", "Users", null, new { @class = "button-green button-small"})
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/Scripts/jquery.js")
}
