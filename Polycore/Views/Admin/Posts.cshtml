@model IEnumerable<Polycore.Models.PostModel>
@{
    ViewBag.Title = "Posts index";
    if (!User.IsInRole("Administrator"))
    {
        Layout = "~/Views/Shared/_Error.cshtml";
    }
}
<div class="span12">
    <div class="template-wrapper">
        <div class="block block-page_header_block span12 first ">
            <div class="span12 block-title centered">
                <h2>Manage Posts</h2>
                <p>The info and stuff, right?</p>
            </div>
            <div class="span12 block-divider"></div>
        </div>
    </div>
    <div class="block block-column_block span12 first cf">
        <!-- Latest news -->
        <div class="block span12 first cf">
            <div class="title-wrapper">
                <h3 class="widget-title">
                    <i class="fa fa-user"></i>
                    Posts
                </h3>
                <div class="clear"></div>
            </div>
            <div class="wcontainer">
                <table class="table table-striped table-condensed table-hover" id="select">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Subject name</th>
                            <th>User name</th>
                            <th>Likes</th>
                            <th>Dislikes</th>
                            <th>Posted</th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Subject.Name</td>
                            <td>@item.User.UserName</td>
                            <td>@item.Likes</td>
                            <td>@item.Dislikes</td>
                            <td>@item.Posted</td>
                            <td>
                                @Html.ActionLink(" ", "Posts", "Admin", new { id = item.PostID }, new { @class = "fa fa-fw fa-info" })
                                @Html.ActionLink(" ", "AddPosts", "Admin", new { id = item.PostID }, new { @class = "fa fa-fw fa-users" })
                                @Ajax.ActionLink(" ", "DeletePosts", new { id = item.PostID }, new AjaxOptions
                                {
                                    Confirm = "Are you sure the post with title: " + item.Title + " must be deleted?",
                                    HttpMethod = "Post",
                                    OnSuccess = "window.location.reload()"
                                }, new { @class = "fa fa-fw fa-trash-o" })
                            </td>
                        </tr>
                    }
                </table>
                <br />
                @Html.ActionLink("Back", "Dashboard", "Admin", null, new Dictionary<string, object>() { { "class", "button-green button-small" } })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/Scripts/jquery.js")
}
