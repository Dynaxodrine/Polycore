@model IEnumerable<Polycore.Models.NewsArticleModel>
@{
    ViewBag.Title = "Posts";
}
<div class="span12">
    <div class="template-wrapper">
        <div class="block block-page_header_block span12 first ">
            <div class="span12 block-title centered">
                <h2>News Articles</h2>
                <p>Here you can add and remove News Article <small><i>They're the ones displayed on the homepage</i></small></p>
            </div>
            <div class="span12 block-divider"></div>
        </div>
    </div>
    <div class="block block-column_block span12 first cf">
        <!-- Latest news -->
        <div class="block span12 first cf">
            <div class="title-wrapper">
                <h3 class="widget-title">
                    <i class="fa fa-file-text"></i>
                    News Articles
                </h3>
                <div class="clear"></div>
            </div>
            <div class="wcontainer">
                <table class="table table-striped table-condensed table-hover" id="select">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>C</th>
                        <th>Writer</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                       {
                        <tr onclick="location.href = '@(Url.Action("Post", new { id = item.NewsArticleID}))'">
                                <td>@item.NewsArticleID</td>
                                <td>@item.Title</td>
                                <td>@item.Comments.Count</td>
                                <td>@item.User.UserName</td>
                                <td>@item.Published.ToShortDateString()</td>
                                <td>
                                   @Ajax.ActionLink(" ", "DeletePost", new { id = item.NewsArticleID }, new AjaxOptions
                                   {
                                       Confirm = "Are you sure post: " + item.Title + " must be deleted?",
                                       HttpMethod = "Post",
                                       OnSuccess = "window.location.reload()"
                                   }, new {@class= "fa fa-fw fa-trash-o"})
                            </td>
                        </tr>
                       }
                    </tbody>
                </table>
                <br />
                @Html.ActionLink("Back", "Dashboard", null, new { @class = "button-green button-small" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/Scripts/jquery.js")
    @Scripts.Render("~/Scripts/SelectBar.js")
}
