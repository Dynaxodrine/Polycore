@model IEnumerable<Polycore.Models.GameModel>

@{
    ViewBag.Title = "Games";
}

<h2>@ViewBag.Platform --> Games</h2>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div> - @Html.ActionLink(item.Name, "Subjects", new { platform = ViewBag.Platform, game = item.Name, id = item.GameID })</div>
    }
}